<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViviCampomarino.ViewNotifica">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="0.1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="White" CornerRadius="10" Padding="5,5,5,5" Margin="10,5,10,5">
        <StackLayout Margin="5,10,5,10">
            <Label x:Name="LblTitolo"  VerticalOptions="Center"  Text="Notifica" FontSize="16" FontAttributes="Bold" TextColor="#3c3c3b"/>
            <Label x:Name="LblDescrizione"  VerticalOptions="Center"  Text="Notifica" FontSize="16" TextColor="#3c3c3b"/>
        </StackLayout>
    </Frame>
    <ImageButton Grid.Row="0" Grid.Column="1" Source="Delete" HeightRequest="30" BackgroundColor="Transparent" Margin="5,5,10,5" Clicked="ImageButton_Clicked"/>
</Grid>