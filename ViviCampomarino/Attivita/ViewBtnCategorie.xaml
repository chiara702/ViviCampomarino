<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViviCampomarino.ViewBtnCategorie">
    <ContentView.Content>
        <Grid RowSpacing="0" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="110" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="165" />
            </Grid.ColumnDefinitions>
            <Frame BackgroundColor="White" Grid.Row="0" Grid.RowSpan="2"  Opacity="1" HasShadow="True" CornerRadius="10"/>
            <Image x:Name="BtnImg" Grid.Row="0" Source="AttNumeriUtili" VerticalOptions="End" Margin="0,5,0,0" />
            <Label x:Name="BtnLabel" Grid.Row="1" Text="numeri utili" TextTransform="Uppercase" Margin="5,2,5,5" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center" FontSize="18"  TextColor="#a4182f" />

        </Grid>


    </ContentView.Content>
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapBtn_Tapped"/>
    </ContentView.GestureRecognizers>

</ContentView>