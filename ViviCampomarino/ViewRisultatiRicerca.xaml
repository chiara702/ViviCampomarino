<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViviCampomarino.ViewRisultatiRicerca" ColumnSpacing="0" RowSpacing="0">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="2*"/>
    </Grid.RowDefinitions>

    <Frame Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" CornerRadius="20"  Padding="0" Margin="0,0,10,0" BackgroundColor="pink">
        <Image x:Name="ImgLibro" Source="ImmagineLibro" HorizontalOptions="FillAndExpand" Aspect="AspectFill" VerticalOptions="FillAndExpand" />
    </Frame>
    <Label x:Name="LblTitolo" Grid.Row="0" Grid.Column="1" Text="Titolo del libro" TextColor="#3c3c3b"/>
    <Label x:Name="LblAutori" Grid.Row="1" Grid.Column="1"  Text="Nome autore" TextColor="#3c3c3b" />
    <Label x:Name="LblDisponibile" Grid.Row="2" Grid.Column="1"  Text="Disponibile" TextColor="#3c3c3b" />
    <Button Grid.Row="3" Grid.Column="1"  Margin="5, 5,5,5" x:Name="BtnPrenota" Text="PRENOTA" TextTransform="Uppercase" BackgroundColor="#0c4b8e" FontSize="22" TextColor="White" FontAttributes="Bold" CornerRadius="20"  />

</Grid>