<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:rox="clr-namespace:Rox;assembly=Rox.Xamarin.Video.Portable"
             x:Class="ViviCampomarino.PageScopriCampomarinoDettagli" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Label x:Name="TxtTitolo" Text="Titolo del video" TextColor="White" FontSize="20" Margin="10,10,10,10" VerticalOptions="Start" HorizontalOptions="Center"/>
            <rox:VideoView Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" x:Name="Video1" FullScreen="True" LoopPlay="False" AutoPlay="True" MinimumHeightRequest="250" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" >
            </rox:VideoView>
            <ActivityIndicator IsRunning="true" IsVisible="false" WidthRequest="50" x:Name="Act1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>