<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViviCampomarino.PageLoading" BackgroundColor="#3c3c3b" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid  VerticalOptions="FillAndExpand"  Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="0" VerticalOptions="Center" >

                <Image x:Name="LogoCampomarino" VerticalOptions="Center" Source="LogoViviCampomarino"  Margin="40,30,40, 0" WidthRequest="180" />
                   
                    <ActivityIndicator IsRunning="True" WidthRequest="100"  HorizontalOptions="Center" Margin="0,30,0, 0" />
            </StackLayout>
            <Label Grid.Row="1" x:Name="LblVersion" Text="ver." HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,0,0, 35" TextColor="White" />
        </Grid>
    </ContentPage.Content>
</ContentPage>