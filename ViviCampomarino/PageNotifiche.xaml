<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViviCampomarino.PageNotifiche" BackgroundColor="#3c3c3b"  Title="Notifiche">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Label TextColor="White"  Margin="20,30,20,30" Text="Notifiche non disponibili." FontSize="18" IsVisible="false" x:Name="LblNonDisponibile"/>
            <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout x:Name="StkNotifiche" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                </StackLayout>
            </ScrollView>
            <Button Text="Torna all'APP" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>